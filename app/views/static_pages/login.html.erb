<div class="login-form">
  <h2 class="header">
    <%= t("app.name") %> Login
  </h2>
  <form>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" placeholder="Email" value="demo@example.com" autofocus="true">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" placeholder="Password" value="demouser">
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" checked> Remember me
      </label>
    </div>
    <div class="submit-button">
      <a href="<%= url_for("dashboard") %>" tabindex="0" class="btn btn-yellow">
      Login
      </a>
    </div>
  </form>
</div>
