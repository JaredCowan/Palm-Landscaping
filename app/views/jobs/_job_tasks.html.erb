<div class="panel" id="job-task-panel">
  <div class="panel-heading">
    Job task
  </div>
  <div class="panel-body">
    <table class="table table-hover job-table">
      <thead>
        <tr>
          <th>
            Status
          </th>
          <th>
            Task
          </th>
          <th class="hidden-xs">
            Start
          </th>
          <th class="hidden-xs">
            End
          </th>
          <th>
            Total Time
          </th>
          <th>
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        <% 7.times do %>
          <% task = %w(mowing_lawn tree_removal gardening water_plants tree_trimming trim_bushes).sample.gsub("_", " ") %>
          <% label = %w(completed in-progress completed in-progress completed hold canceled completed in-progress).sample %>
          <tr class="<%= label %>">
            <td class="job-label">
              <span class="label label-<%= label %>">
                <%= label.titleize %>
              </span>
            </td>
            <td>
              <%= task.titleize %>
            </td>
            <td class="hidden-xs">
              <%= l Time.now, format: :short_date %>
            </td>
            <td class="hidden-xs">
              <%= l Time.now.yesterday, format: :short_date %>
            </td>
            <td>
              <%= "#{Random.rand(1..3)}hr #{Random.rand(0..60)}min" %>
            </td>
            <td class="job-actions">
              <%= link_to ajax_path(soft: "ajax_load", hard: "jobs_job-details", replace: "job-task-panel"), class: "btn btn-yellow btn-xs", remote: true do %>
                <i class="fa fa-eye"></i>
                View
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table> <!-- END .table -->
  </div> <!-- END .panel-body -->
</div> <!-- END .panel -->
