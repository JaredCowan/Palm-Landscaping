<%# variables  %>
<% job_name = FFaker::Name.name %>
<% creator_name = FFaker::Name.name %>
<% company_name = FFaker::Company.name %>
<% completion = number_to_percentage(Random.rand(14..100), precision: 0) %>
<% status = ["active", "active", "hold"].sample %>
<% total_time = "#{Random.rand(1..14)}hr #{Random.rand(0..60)}min" %>

<section class="job-section job-view-section">
  <div class="row">
    <div class="col-md-8">
      <div class="panel">
        <div class="job-heading">
        <strong>
          Viewing Job: <%= job_name %>
        </strong>
        </div>
        <div class="panel-body job-meta">
          <div class="row job-details">
            <div class="job-row-wrapper">
              <div class="job-row">
                <p>
                  <span class="bold">Created by</span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <%= creator_name %>
                </p>
              </div> <!-- END .job-row -->
              <div class="job-row">
                <p>
                  <span class="bold">Status </span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <span class="label label-<%= status %>">
                    <%= status %>
                  </span>
                </p>
              </div> <!-- END .job-row -->
            </div> <!-- END .job-row-wrapper -->

            <div class="job-row-wrapper">
              <div class="job-row">
                <p>
                  <span class="bold">Created </span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <%= l Time.now, format: :only_date_time %>
                </p>
              </div>
              <div class="job-row">
                <p>
                  <span class="bold">Last Updated</span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <%= l Time.now.yesterday, format: :only_date_time %>
                </p>
              </div> <!-- END .job-row -->
            </div> <!-- END .job-row-wrapper -->

            <div class="job-row-wrapper">
              <div class="job-row">
                <p>
                  <span class="bold">Client</span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <a href="javascript:;">
                    <%= company_name %>
                  </a>
                </p>
              </div> <!-- END .job-row -->

              <div class="job-row">
                <p>
                  <span class="bold">Leader</span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <span class="job-team">
                    <a href="javascript:;">
                      <img alt="image" class="" src="<%= image_url '/images/avatar-1.png' %>">
                      John Doe
                    </a>
                  </span>
                </p>
              </div> <!-- END .job-row -->
            </div> <!-- END .job-row-wrapper -->

            <div class="job-row-wrapper">
              <div class="job-row">
                <p>
                  <span class="bold">3rd Party</span>
                  <span class="hidden-xs hidden-sm">:</span>
                  <span class="job-team">
                    <img alt="image" class="" src="<%= image_url '/images/avatar-1.png' %>">
                    <%= FFaker::Name.first_name %>'s Landscaping
                  </span>
                </p>
              </div> <!-- END .job-row -->

              <div class="job-row">
                <p>
                  <span class="bold">Billable Time</span>
                  <span class="hidden-xs hidden-sm">:</span>
                    <%= total_time %>
                </p>
              </div> <!-- END .job-row -->
            </div> <!-- END .job-row-wrapper -->

            <!--<div class="col-lg-12">
              <dl class="dl-horizontal mtop20 job-progress">
                <dt>Project Completed:</dt>
                <dd>
                  <div class="progress progress-striped active ">
                    <div style="width: <%= completion %>;" class="progress-bar progress-bar-success">
                      <%= completion %>
                    </div>
                  </div>
                </dd>
              </dl>
            </div> --><!-- END .col-xx-xx -->
          </div> <!-- END .row -->
        </div> <!-- END .panel-body -->
      </div> <!-- END .panel -->

      <div class="panel">
        <div class="panel-heading">
          Job task
        </div>
        <div class="panel-body">
          <table class="table table-hover job-table">
            <thead>
              <tr>
                <th>
                  Title
                </th>
                <th>
                  Start
                </th>
                <th class="hidden-xs">
                  End
                </th>
                <th>
                  Total Time
                </th>
                <th>
                  Status
                </th>
              </tr>
            </thead>
            <tbody>
              <% 7.times do %>
                <% task = %w(mowing_lawn tree_removal gardening water_plants tree_trimming trim_bushes).sample.gsub("_", " ") %>
                <% label = %w(completed in-progress uncomplete completed in-progress completed hold canceled completed in-progress).sample %>
                <tr>
                  <td>
                    <%= task %>
                  </td>
                  <td>
                    <%= l Time.now, format: :short_date %>
                  </td>
                  <td class="hidden-xs">
                    <%= l Time.now.yesterday, format: :short_date %>
                  </td>
                  <td>
                    <%= "#{Random.rand(1..3)}hr #{Random.rand(0..60)}min" %>
                  </td>
                  <td>
                    <span class="label label-info">
                      <%= label %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table> <!-- END .table -->
        </div> <!-- END .panel-body -->
      </div> <!-- END .panel -->
    </div> <!-- END .col-xx-xx -->

    <div class="col-md-4">
      <div class="panel">
        <div class="panel-heading">
          Job Description
        </div>
        <div class="panel-body">
          <a href="javascript:;">
            <img src="img/email-img/vector-lab.jpg" alt=""/>
          </a>
          <p>
            Sometimes the simplest things are the hardest to find. I imagined a line of my favorite pieces, the things i would live in every day, all year round. So I stopped looking and started designing. Sometimes the simplest things are the hardest to find. Sometimes the simplest things are the hardest to find. I imagined a line of my favorite pieces, the things i would live in every day, all year round. So I stopped looking and started designing. Sometimes the simplest things are the hardest to find.
          </p>
          <br>
          <h5 class="bold">Priority</h5>
          <ul class="nav nav-pills nav-stacked labels-info ">
            <li>
              <i class="fa fa-circle text-danger"></i> High Priority
            </li>
          </ul>
          <br>
          <h5 class="bold">Job files</h5>
          <ul class="list-unstyled job-files">
            <li>
              <a href="javascript:;">
                <i class="fa fa-file-text"></i>
                Project-document.docx
              </a>
            </li>
            <li>
              <a href="javascript:;">
                <i class="fa fa-picture-o"></i>
                Logo-company.jpg
              </a>
            </li>
            <li>
              <a href="javascript:;">
                <i class="fa fa-mail-forward"></i>
                Email-from-flatbal.mln
              </a>
            </li>
            <li>
              <a href="javascript:;">
                <i class="fa fa-file"></i> Contract-10_12_2014.docx
              </a>
            </li>
          </ul> <!-- END .list-unstyled -->

          <div class="text-center mtop20">
            <a href="javascript:;" class="btn btn-sm btn-primary">
              Add files
            </a>
            <a href="javascript:;" class="btn btn-sm btn-warning">
              Report contact
            </a>
          </div>
        </div> <!-- END .panel-body -->
      </div> <!-- END .panel -->
    </div> <!-- END .col-xx-xx -->
  </div> <!-- END .row -->
</section> <!-- END .job-section -->
